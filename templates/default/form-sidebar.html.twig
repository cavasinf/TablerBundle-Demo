{% extends 'layout.html.twig' %}

{% block page_title %} Form demo {% endblock %}
{% block page_subtitle %}with activated iCheck plugin and sidebar content{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-6">
            {% embed '@Tabler/embeds/card.html.twig' %}
                {% block box_before %}{{ form_start(form) }}{% endblock %}
                {% block box_title %}{{ 'A form demo'|trans }}{% endblock %}
                {% block box_body %}
                    <p>
                        Submit the form to see validation errors...
                    </p>
                    <hr>
                    {{ form_widget(form) }}
                {% endblock %}
                {% block box_footer %}
                    <div class="pull-right">
                        <button type="reset" class="btn btn-warning "><i class="fa fa-times"></i> {{ 'Cancel'|trans }}</button>
                        <button type="submit" class="btn btn-primary "><i class="fa fa-check-square"></i> {{ 'Submit'|trans }}</button>
                    </div>
                {% endblock %}

                {% block box_after %}{{ form_end(form)}}{% endblock %}
            {% endembed %}
        </div>
